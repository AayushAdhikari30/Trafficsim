{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Traffic Simulator",
            "type": "shell",
            "command": "g++",
            "args": [
                "src/simulator.cpp",
                "src/TrafficManager.cpp",
                "src/TrafficLight.cpp",
                "src/Vehicle.cpp",
                "-o",
                "build/simulator.exe",
                "-Iinclude",
                "-Lbuild",
                "-lSDL3",
                "-lSDL3_ttf"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}