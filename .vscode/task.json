{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Traffic Generator",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/src/TrafficGenerator.cpp",
                "-o",
                "${workspaceFolder}/build/TrafficGenerator.exe",
                "-std=c++17",
                "-Wall"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build Simulator",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/src/simulator.cpp",
                "-o",
                "${workspaceFolder}/build/Simulator.exe",
                "-IC:/SDL2/include",
                "-LC:/SDL2/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_ttf",
                "-std=c++17",
                "-Wall"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build All",
            "dependsOn": [
                "Build Traffic Generator",
                "Build Simulator"
            ],
            "group": "build"
        }
    ]
}